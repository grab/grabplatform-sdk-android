<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="GrabIdPartnerSDKTheme" parent="Theme.AppCompat.Light">
        <!-- This is the styling for action bar -->
        <item name="actionBarStyle">@style/GrabIdPartnerSDKActionBar</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
    </style>

    <style name="GrabIdPartnerSDKActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/color_greeen</item>
        <item name="titleTextStyle">@style/GrabIdPartnerSDKActionBarTitle</item>
    </style>

    <style name="GrabIdPartnerSDKActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="FontMedium_Normal">
        <item name="android:textSize">16sp</item>
    </style>
</resources>